<Page x:Class="variant1.Pages.Editmaterialpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:variant1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Editmaterialpage">

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="BackBtn"
             Click="BackBtn_Click"
             Content="Назад"
             Background="#546F94 "
Foreground="White"
             FontSize="22"
             Margin="10"/>
        <TextBlock Text="Добавление нового продукта"
                Grid.Column="1"
                Grid.ColumnSpan="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="25"/>
        <TextBlock Text="Наименование материала"
                Grid.Row="1"
                FontSize="22"
                Grid.ColumnSpan="2"
                Margin="10" HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        <TextBox Grid.Row="2"
              Grid.ColumnSpan="2"
              Margin="10 20"
              FontSize="20"
                 IsEnabled="False"
              Padding="5 0"
              x:Name="NameMaterialTb"
              VerticalContentAlignment="Center"/>
        <TextBlock Text="Тип материала"
                Grid.Row="3"
                FontSize="22"
                Grid.ColumnSpan="2"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4"
               Grid.ColumnSpan="2"
               Margin="10 20"
               FontSize="20"
               Padding="5 0"
               x:Name="TypeProdCmb"
               ItemsSource="{Binding material_Type_s}"
               VerticalContentAlignment="Center">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Тип_материала}"/>
                        <TextBlock Text="{Binding Процент_потери_сырья}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Text="Количество на складе"
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                FontSize="22"
                Grid.ColumnSpan="2"
                Margin="10"
                VerticalAlignment="Center"/>
        <TextBox Grid.Row="2"
              Grid.Column="2"
       Grid.ColumnSpan="2"
       Margin="10 20"
       FontSize="20"
       Padding="5 0"
       x:Name="KolvoWorkShopTb"
       VerticalContentAlignment="Center"/>
        <TextBlock Text="Единица измерения"
           Grid.Row="3"
           Grid.Column="2"
           HorizontalAlignment="Center"
           FontSize="22"
           Grid.ColumnSpan="2"
           Margin="10"
           VerticalAlignment="Center"/>
        <TextBox Grid.Row="4"
         Grid.Column="2"
  Grid.ColumnSpan="2"
  Margin="10 20"
  FontSize="20"
  Padding="5 0"
  x:Name="EdIzmereeniaTb"
  VerticalContentAlignment="Center"/>
        <TextBlock Text="Количество в упаковке"
           Grid.Row="5"
           Grid.Column="0"
           HorizontalAlignment="Center"
           FontSize="22"
           Grid.ColumnSpan="2"
           Margin="10"
           VerticalAlignment="Center"/>
        <TextBox Grid.Row="6"
       Grid.Column="0"
Grid.ColumnSpan="2"
Margin="10 20"
FontSize="20"
Padding="5 0"
x:Name="KolvoUpakTb"
VerticalContentAlignment="Center"/>
        <TextBlock Text="Минимальное количество"
           Grid.Row="5"
           Grid.Column="2"
           HorizontalAlignment="Center"
           FontSize="22"
           Grid.ColumnSpan="2"
           Margin="10"
           VerticalAlignment="Center"/>
        <TextBox Grid.Row="6"
       Grid.Column="2"
Grid.ColumnSpan="2"
Margin="10 20"
FontSize="20"
Padding="5 0"
x:Name="MinKolvoTb"
VerticalContentAlignment="Center"/>
        <TextBlock Text="Цена единицы материала"
           Grid.Row="1"
           Grid.Column="4"
           HorizontalAlignment="Center"
           FontSize="22"
           Grid.ColumnSpan="2"
           Margin="10"
           VerticalAlignment="Center"/>
        <TextBox Grid.Row="2"
       Grid.Column="4"
Grid.ColumnSpan="2"
Margin="10 20"
FontSize="20"
Padding="5 0"
x:Name="PriceEdinTb"
VerticalContentAlignment="Center"/>
        <Button Grid.Column="4"
             Grid.ColumnSpan="2"
             Margin="30 5"
             Background="#546F94 "
Foreground="White"
             Content="Сохранить"
             FontSize="22"
             Grid.Row="4"
             x:Name="SaveBtn"
             Click="SaveBtn_Click"/>

    </Grid>
</Page>
